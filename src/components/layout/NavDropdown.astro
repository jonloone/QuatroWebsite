---
import ArrowRight from '@/components/icons/ArrowRight.astro'
import ChevronDown from '@/components/icons/ChevronDown.astro'
import type { FeaturedCaseStudy, NavDropdownVariant, NavItem } from '@/lib/navigation'

import LinkIcon from '@/components/icons/LinkIcon.astro'
import CogIcon from '@/components/icons/CogIcon.astro'
import CommandLineIcon from '@/components/icons/CommandLineIcon.astro'
import ChartBarIcon from '@/components/icons/ChartBarIcon.astro'
import ShieldCheckIcon from '@/components/icons/ShieldCheckIcon.astro'
import LightBulbIcon from '@/components/icons/LightBulbIcon.astro'
import LockClosedIcon from '@/components/icons/LockClosedIcon.astro'
import TruckIcon from '@/components/icons/TruckIcon.astro'
import BoltIcon from '@/components/icons/BoltIcon.astro'
import GlobeAltIcon from '@/components/icons/GlobeAltIcon.astro'
import ShieldIcon from '@/components/icons/ShieldIcon.astro'
import WrenchScrewdriverIcon from '@/components/icons/WrenchScrewdriverIcon.astro'
import BuildingLibraryIcon from '@/components/icons/BuildingLibraryIcon.astro'
import BuildingOffice2Icon from '@/components/icons/BuildingOffice2Icon.astro'
import UserGroupIcon from '@/components/icons/UserGroupIcon.astro'
import BriefcaseIcon from '@/components/icons/BriefcaseIcon.astro'
import NewspaperIcon from '@/components/icons/NewspaperIcon.astro'

interface Props {
  label: string
  items: NavItem[]
  cta: { name: string; href: string }
  variant?: NavDropdownVariant
  featured?: FeaturedCaseStudy
}

const { label, items, cta, variant = 'stacked', featured } = Astro.props

const getPopoverWidth = () => {
  switch (variant) {
    case 'two-column':
      return 'w-screen max-w-2xl'
    case 'featured':
      return 'w-screen max-w-3xl'
    default:
      return 'w-screen max-w-md'
  }
}

const iconMap: Record<string, any> = {
  LinkIcon,
  CogIcon,
  CommandLineIcon,
  ChartBarIcon,
  ShieldCheckIcon,
  LightBulbIcon,
  LockClosedIcon,
  TruckIcon,
  BoltIcon,
  GlobeAltIcon,
  ShieldIcon,
  WrenchScrewdriverIcon,
  BuildingLibraryIcon,
  BuildingOffice2Icon,
  UserGroupIcon,
  BriefcaseIcon,
  NewspaperIcon,
}

const getIconName = (iconFn: any): string => {
  if (!iconFn) return ''
  const fnStr = iconFn.toString()
  const match = fnStr.match(/function\s+(\w+)/) || fnStr.match(/(\w+Icon)/)
  return match ? match[1] : ''
}

const midpoint = Math.ceil(items.length / 2)
const leftColumn = items.slice(0, midpoint)
const rightColumn = items.slice(midpoint)
---

<div class="relative group/flyout">
  <!-- Trigger button -->
  <button
    data-nav-link
    class="inline-flex items-center gap-1 font-display text-sm font-semibold transition-colors duration-150"
    aria-expanded="false"
  >
    {label}
    <ChevronDown class="size-4 transition-transform duration-150 group-hover/flyout:rotate-180" />
  </button>

  <!-- Flyout panel -->
  <div class:list={[
    'absolute left-1/2 z-10 mt-3 -translate-x-1/2',
    'opacity-0 invisible translate-y-1',
    'transition-all duration-150 ease-out',
    'group-hover/flyout:opacity-100 group-hover/flyout:visible group-hover/flyout:translate-y-0',
    getPopoverWidth(),
  ]}>
    <div class="overflow-hidden bg-white rounded-2xl" style="border: 1px solid rgba(226,232,240,0.7); box-shadow: var(--shadow-card);">
      {variant === 'stacked' && (
        <>
          <div class="p-4">
            {items.map((item) => {
              const IconName = getIconName(item.icon)
              const IconComponent = iconMap[IconName]
              return (
                <a
                  href={item.href}
                  class="group relative flex gap-x-6 p-4 hover:bg-neutral-100 transition-colors duration-150"
                >
                  <div class="mt-1 flex size-11 shrink-0 items-center justify-center bg-neutral-100 group-hover:bg-white transition-colors duration-150">
                    {IconComponent && <IconComponent class="size-6 text-neutral-600 group-hover:text-brand-500 transition-colors duration-150" />}
                  </div>
                  <div>
                    <span class="font-display font-medium text-neutral-800">
                      {item.name}
                      <span class="absolute inset-0" />
                    </span>
                    <p class="mt-1 text-sm text-neutral-600">{item.description}</p>
                  </div>
                </a>
              )
            })}
          </div>
          <div class="px-8 py-6" style="border-top: 1px solid rgba(226,232,240,0.7);">
            <a
              href={cta.href}
              class="inline-flex items-center gap-x-2.5 text-sm/6 font-display font-medium text-neutral-800 hover:text-brand-500 transition-colors duration-150"
            >
              {cta.name}
              <ArrowRight class="size-5" />
            </a>
          </div>
        </>
      )}

      {variant === 'two-column' && (
        <>
          <div class="grid grid-cols-2 gap-x-4 p-4">
            <div>
              {leftColumn.map((item) => {
                const IconName = getIconName(item.icon)
                const IconComponent = iconMap[IconName]
                return (
                  <a
                    href={item.href}
                    class="group relative flex gap-x-6 p-4 hover:bg-neutral-100 transition-colors duration-150"
                  >
                    <div class="mt-1 flex size-11 shrink-0 items-center justify-center bg-neutral-100 group-hover:bg-white transition-colors duration-150">
                      {IconComponent && <IconComponent class="size-6 text-neutral-600 group-hover:text-brand-500 transition-colors duration-150" />}
                    </div>
                    <div>
                      <span class="font-display font-medium text-neutral-800">
                        {item.name}
                        <span class="absolute inset-0" />
                      </span>
                      <p class="mt-1 text-sm text-neutral-600">{item.description}</p>
                    </div>
                  </a>
                )
              })}
            </div>
            <div>
              {rightColumn.map((item) => {
                const IconName = getIconName(item.icon)
                const IconComponent = iconMap[IconName]
                return (
                  <a
                    href={item.href}
                    class="group relative flex gap-x-6 p-4 hover:bg-neutral-100 transition-colors duration-150"
                  >
                    <div class="mt-1 flex size-11 shrink-0 items-center justify-center bg-neutral-100 group-hover:bg-white transition-colors duration-150">
                      {IconComponent && <IconComponent class="size-6 text-neutral-600 group-hover:text-brand-500 transition-colors duration-150" />}
                    </div>
                    <div>
                      <span class="font-display font-medium text-neutral-800">
                        {item.name}
                        <span class="absolute inset-0" />
                      </span>
                      <p class="mt-1 text-sm text-neutral-600">{item.description}</p>
                    </div>
                  </a>
                )
              })}
            </div>
          </div>
          <div class="px-8 py-6" style="border-top: 1px solid rgba(226,232,240,0.7);">
            <a
              href={cta.href}
              class="inline-flex items-center gap-x-2.5 text-sm/6 font-display font-medium text-neutral-800 hover:text-brand-500 transition-colors duration-150"
            >
              {cta.name}
              <ArrowRight class="size-5" />
            </a>
          </div>
        </>
      )}

      {variant === 'featured' && featured && (
        <div class="grid grid-cols-2">
          <div class="p-4">
            {items.map((item) => {
              const IconName = getIconName(item.icon)
              const IconComponent = iconMap[IconName]
              return (
                <a
                  href={item.href}
                  class="group relative flex gap-x-6 p-4 hover:bg-neutral-100 transition-colors duration-150"
                >
                  <div class="mt-1 flex size-11 shrink-0 items-center justify-center bg-neutral-100 group-hover:bg-white transition-colors duration-150">
                    {IconComponent && <IconComponent class="size-6 text-neutral-600 group-hover:text-brand-500 transition-colors duration-150" />}
                  </div>
                  <div>
                    <span class="font-display font-medium text-neutral-800">
                      {item.name}
                      <span class="absolute inset-0" />
                    </span>
                    <p class="mt-1 text-sm text-neutral-600">{item.description}</p>
                  </div>
                </a>
              )
            })}
            <div class="mt-2 px-4">
              <a
                href={cta.href}
                class="inline-flex items-center gap-x-2.5 text-sm/6 font-display font-medium text-neutral-800 hover:text-brand-500 transition-colors duration-150"
              >
                {cta.name}
                <ArrowRight class="size-5" />
              </a>
            </div>
          </div>
          <div class="flex flex-col justify-center p-8" style="border-left: 1px solid rgba(226,232,240,0.7); background-color: var(--color-paper);">
            <p class="font-mono text-[10px] uppercase tracking-[0.1em] text-brand-500">
              Case Study
            </p>
            <p class="mt-2 font-display text-lg tracking-tight text-neutral-800">
              {featured.title}
            </p>
            <blockquote class="mt-3 text-sm/6 text-neutral-600">
              &ldquo;{featured.quote}&rdquo;
            </blockquote>
            <p class="mt-3 text-sm font-medium text-neutral-800">
              {featured.author}
              <span class="text-neutral-500"> &mdash; {featured.company}</span>
            </p>
            <a
              href={featured.href}
              class="mt-4 inline-flex items-center gap-x-2 text-sm/6 font-display font-medium text-brand-600 hover:text-brand-500 transition-colors duration-150"
            >
              Read case study
              <ArrowRight class="size-4" />
            </a>
          </div>
        </div>
      )}
    </div>
  </div>
</div>

<script>
  // Accessibility: toggle flyout on click for keyboard users, close on Escape
  document.querySelectorAll('.group\\/flyout').forEach((container) => {
    const button = container.querySelector('button');
    const panel = container.querySelector(':scope > div:last-child') as HTMLElement;
    if (!button || !panel) return;

    let isOpen = false;

    button.addEventListener('click', () => {
      isOpen = !isOpen;
      if (isOpen) {
        panel.style.opacity = '1';
        panel.style.visibility = 'visible';
        panel.style.transform = 'translateX(-50%) translateY(0)';
        button.setAttribute('aria-expanded', 'true');
      } else {
        panel.style.opacity = '';
        panel.style.visibility = '';
        panel.style.transform = '';
        button.setAttribute('aria-expanded', 'false');
      }
    });

    // Close on Escape
    container.addEventListener('keydown', (e) => {
      if ((e as KeyboardEvent).key === 'Escape' && isOpen) {
        isOpen = false;
        panel.style.opacity = '';
        panel.style.visibility = '';
        panel.style.transform = '';
        button.setAttribute('aria-expanded', 'false');
        button.focus();
      }
    });

    // Reset inline styles when hover takes over
    container.addEventListener('mouseenter', () => {
      if (isOpen) {
        panel.style.opacity = '';
        panel.style.visibility = '';
        panel.style.transform = '';
        isOpen = false;
      }
    });
  });
</script>
