---
import QuatroMark from '@/components/QuatroMark.astro'
import { footerNavigation } from '@/lib/navigation'

const columns = Object.values(footerNavigation)
const currentYear = new Date().getFullYear()
---

<footer class="bg-neutral-950">
  <div class="py-16 text-neutral-50">
    <div class="mx-auto max-w-7xl px-6 lg:px-10 flex flex-col gap-16">
      <!-- Logo and tagline -->
      <div>
        <a href="/" class="flex items-center gap-3 mb-4" aria-label="Quatro home">
          <div class="w-7 h-7 flex items-center justify-center" style="background-color: rgba(255,255,255,0.1);">
            <QuatroMark variant="white" class="w-4 h-4" />
          </div>
          <span class="font-display text-sm font-bold text-white">Quatro</span>
        </a>
        <p class="font-mono text-[10px] uppercase tracking-[0.1em] text-white/40">
          Industrial intelligence<br />for critical operations.
        </p>
      </div>

      <!-- Link columns -->
      <nav class="grid grid-cols-2 gap-6 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-7">
        {columns.map((column) => (
          <div>
            <h3 class="font-mono text-[10px] uppercase tracking-[0.1em] text-white/60">{column.title}</h3>
            <ul role="list" class="mt-3 flex flex-col gap-2.5">
              {column.items.map((item) => (
                <li>
                  <a href={item.href} class="font-sans text-sm text-white/40 hover:text-white/80 transition-colors duration-150">
                    {item.name}
                  </a>
                </li>
              ))}
            </ul>
          </div>
        ))}
      </nav>

      <!-- Copyright -->
      <div class="pt-8 flex flex-col sm:flex-row items-center justify-between gap-4" style="border-top: 1px solid rgba(255,255,255,0.1);">
        <p class="font-mono text-[10px] uppercase tracking-[0.05em] text-white/30">
          &copy; {currentYear} Quatro. All rights reserved.
        </p>
        <div class="flex items-center gap-6">
          <a href="/legal/privacy" class="font-mono text-[10px] uppercase tracking-[0.05em] text-white/30 hover:text-white/60 transition-colors duration-150">Privacy</a>
          <a href="/legal/terms" class="font-mono text-[10px] uppercase tracking-[0.05em] text-white/30 hover:text-white/60 transition-colors duration-150">Terms</a>
          <a href="/legal/security" class="font-mono text-[10px] uppercase tracking-[0.05em] text-white/30 hover:text-white/60 transition-colors duration-150">Security</a>
        </div>
      </div>
    </div>
  </div>
</footer>
