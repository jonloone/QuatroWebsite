---
interface Metric {
  value: string
  label: string
}

interface Props {
  industryLabel: string
  headline: string
  narrative: string
  metrics?: Metric[]
  cta?: { label: string; href: string }
}

const { industryLabel, headline, narrative, metrics, cta } = Astro.props
---

<div class="rounded-2xl border border-neutral-200 bg-neutral-50 p-6 sm:p-8">
  <p class="text-xs font-normal uppercase tracking-wider text-brand-500">{industryLabel}</p>
  <h3 class="mt-3 font-display text-xl text-neutral-800">{headline}</h3>

  {metrics && metrics.length > 0 && (
    <div class="mt-6 grid gap-4 sm:grid-cols-3">
      {metrics.map((metric) => (
        <div class="text-center">
          <p class="font-display text-2xl text-brand-600">{metric.value}</p>
          <p class="mt-1 text-xs text-neutral-500">{metric.label}</p>
        </div>
      ))}
    </div>
  )}

  <p class="mt-6 text-sm leading-relaxed text-neutral-600">{narrative}</p>

  {cta && (
    <a
      href={cta.href}
      class="mt-4 inline-flex items-center text-sm font-normal text-brand-600 hover:text-brand-700"
    >
      {cta.label}
      <svg class="ml-1 h-4 w-4" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3" />
      </svg>
    </a>
  )}
</div>
