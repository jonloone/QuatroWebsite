---
interface Props {
  label: string
  class?: string
}

const { label, class: className } = Astro.props
---

<div
  class:list={[
    'flex min-h-40 items-center justify-center rounded-xl border-2 border-dashed border-neutral-300 bg-neutral-800/2.5 p-8',
    className,
  ]}
>
  <p class="text-sm font-medium text-neutral-400">{label}</p>
</div>
