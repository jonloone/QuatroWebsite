---
import Container from '@/components/ui/Container.astro'

interface Props {
  stats: { value: string; label: string }[]
  class?: string
}

const { stats, class: className } = Astro.props
---

<section class:list={['bg-neutral-900 py-12 sm:py-16', className]}>
  <Container>
    <div class="grid grid-cols-2 gap-8 lg:grid-cols-4">
      {stats.map((stat) => (
        <div class="text-center">
          <p class="font-display text-3xl font-bold text-white sm:text-4xl lg:text-5xl">{stat.value}</p>
          <p class="mt-2 text-sm text-neutral-400 sm:text-base">{stat.label}</p>
        </div>
      ))}
    </div>
  </Container>
</section>
