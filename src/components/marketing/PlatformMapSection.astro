---
interface Props {
  connect: string
  operate: string
  command: string
}

const { connect, operate, command } = Astro.props
---

<div class="py-16 sm:py-24">
  <div class="mx-auto max-w-7xl px-6 lg:px-8">
    <div class="text-center">
      <h2 class="font-display text-2xl tracking-tight text-neutral-800 sm:text-3xl">
        How the Platform Enables This
      </h2>
      <p class="mt-4 text-lg text-neutral-600">
        Three integrated layers working together to deliver results.
      </p>
    </div>

    <div class="mt-12 grid gap-8 lg:grid-cols-3">
      <!-- Connect -->
      <div class="relative bg-neutral-50 p-8" style="border: 1px solid rgba(226,232,240,1);">
        <div class="mb-4 flex items-center gap-3">
          <div class="flex h-10 w-10 items-center justify-center bg-brand-500 text-white">
            <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" d="M13.19 8.688a4.5 4.5 0 011.242 7.244l-4.5 4.5a4.5 4.5 0 01-6.364-6.364l1.757-1.757m13.35-.622l1.757-1.757a4.5 4.5 0 00-6.364-6.364l-4.5 4.5a4.5 4.5 0 001.242 7.244" />
            </svg>
          </div>
          <h3 class="font-display text-xl tracking-tight text-neutral-800">Connect</h3>
        </div>
        <p class="text-sm leading-relaxed text-neutral-600">{connect}</p>
        <a href="/platform/connect" class="mt-4 inline-flex items-center text-sm font-medium text-brand-600 hover:text-brand-700">
          Learn more
          <svg class="ml-1 h-4 w-4" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3" />
          </svg>
        </a>
      </div>

      <!-- Operate -->
      <div class="relative bg-neutral-50 p-8" style="border: 1px solid rgba(226,232,240,1);">
        <div class="mb-4 flex items-center gap-3">
          <div class="flex h-10 w-10 items-center justify-center bg-brand-500 text-white">
            <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 13.5l10.5-11.25L12 10.5h8.25L9.75 21.75 12 13.5H3.75z" />
            </svg>
          </div>
          <h3 class="font-display text-xl tracking-tight text-neutral-800">Operate</h3>
        </div>
        <p class="text-sm leading-relaxed text-neutral-600">{operate}</p>
        <a href="/platform/operate" class="mt-4 inline-flex items-center text-sm font-medium text-brand-600 hover:text-brand-700">
          Learn more
          <svg class="ml-1 h-4 w-4" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3" />
          </svg>
        </a>
      </div>

      <!-- Command -->
      <div class="relative bg-neutral-50 p-8" style="border: 1px solid rgba(226,232,240,1);">
        <div class="mb-4 flex items-center gap-3">
          <div class="flex h-10 w-10 items-center justify-center bg-brand-500 text-white">
            <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" d="M6.75 7.5l3 2.25-3 2.25m4.5 0h3m-9 8.25h13.5A2.25 2.25 0 0021 18V6a2.25 2.25 0 00-2.25-2.25H5.25A2.25 2.25 0 003 6v12a2.25 2.25 0 002.25 2.25z" />
            </svg>
          </div>
          <h3 class="font-display text-xl tracking-tight text-neutral-800">Command</h3>
        </div>
        <p class="text-sm leading-relaxed text-neutral-600">{command}</p>
        <a href="/platform/command" class="mt-4 inline-flex items-center text-sm font-medium text-brand-600 hover:text-brand-700">
          Learn more
          <svg class="ml-1 h-4 w-4" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3" />
          </svg>
        </a>
      </div>
    </div>

    <!-- Flow arrows (desktop only) -->
    <div class="hidden lg:mt-4 lg:flex lg:items-center lg:justify-center lg:gap-2">
      <span class="font-mono text-[10px] uppercase tracking-[0.1em] text-neutral-500">Data Foundation</span>
      <svg class="h-4 w-4 text-neutral-400" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3" />
      </svg>
      <span class="font-mono text-[10px] uppercase tracking-[0.1em] text-neutral-500">AI Intelligence</span>
      <svg class="h-4 w-4 text-neutral-400" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3" />
      </svg>
      <span class="font-mono text-[10px] uppercase tracking-[0.1em] text-neutral-500">Coordinated Response</span>
    </div>
  </div>
</div>
