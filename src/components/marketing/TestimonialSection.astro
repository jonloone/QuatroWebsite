---
import Container from '@/components/ui/Container.astro'

interface Testimonial {
  quote: string
  author: string
  title: string
  company: string
  logo?: string
}

interface Props {
  heading?: string
  testimonials: Testimonial[]
  class?: string
}

const { heading = 'What Our Customers Say', testimonials, class: className } = Astro.props
---

<section class:list={['py-16 sm:py-24', className]} style="background-color: var(--color-forest);">
  <Container>
    <h2 class="mb-12 text-center font-display text-2xl font-bold tracking-tight text-white sm:text-3xl">
      {heading}
    </h2>
    <div class="grid gap-8 sm:grid-cols-2 lg:grid-cols-3">
      {testimonials.map((t) => (
        <div class="flex flex-col bg-white/10 p-6 sm:p-8" style="border: 1px solid rgba(255,255,255,0.1);">
          <svg
            class="mb-4 h-8 w-8 text-brand-400"
            fill="currentColor"
            viewBox="0 0 32 32"
            aria-hidden="true"
          >
            <path d="M9.352 4C4.456 7.456 1 13.12 1 19.36c0 5.088 3.072 8.064 6.624 8.064 3.36 0 5.856-2.688 5.856-5.856 0-3.168-2.208-5.472-5.088-5.472-.576 0-1.344.096-1.536.192.48-3.264 3.552-7.104 6.624-9.024L9.352 4zm16.512 0c-4.8 3.456-8.256 9.12-8.256 15.36 0 5.088 3.072 8.064 6.624 8.064 3.264 0 5.856-2.688 5.856-5.856 0-3.168-2.304-5.472-5.184-5.472-.576 0-1.248.096-1.44.192.48-3.264 3.456-7.104 6.528-9.024L25.864 4z" />
          </svg>
          <blockquote class="flex-1 text-base leading-relaxed text-neutral-200">
            &ldquo;{t.quote}&rdquo;
          </blockquote>
          <div class="mt-6 flex items-center gap-4 pt-6" style="border-top: 1px solid rgba(255,255,255,0.1);">
            {t.logo ? (
              <img
                src={t.logo}
                alt={t.company}
                width="40"
                height="40"
                class="h-10 w-10 bg-white/10 object-contain"
              />
            ) : (
              <div class="flex h-10 w-10 items-center justify-center bg-brand-500 font-display text-sm font-bold text-white">
                {t.company.charAt(0)}
              </div>
            )}
            <div>
              <p class="text-sm font-normal text-white">{t.author}</p>
              <p class="text-sm text-white/60">
                {t.title}, {t.company}
              </p>
            </div>
          </div>
        </div>
      ))}
    </div>
  </Container>
</section>
